pkgname=perl-io-all
pkgver=0.44
pkgrel=1
pkgdesc="IO::All of it to Graham and Damian!"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/IO-All/"
license=('perl')
source=("http://search.cpan.org/CPAN/authors/id/I/IN/INGY/IO-All-$pkgver.tar.gz")
depends=('perl-io-string' 'perl>=5.6.1')
makedepends=('perl-extutils-makemaker>=6.42.0')
provides=('perl-io-all-base' 'perl-io-all-dbm' 'perl-io-all-dir' 'perl-io-all-file' 'perl-io-all-filesys' 'perl-io-all-link' 'perl-io-all-mldbm' 'perl-io-all-pipe' 'perl-io-all-socket' 'perl-io-all-stdio' 'perl-io-all-string' 'perl-io-all-temp')
options=(!emptydirs)

build() {
  _dir=$(find $srcdir -maxdepth 2 -type f -name 'Makefile.PL')
  if [ ! -z "$_dir" ]; then
    cd $(dirname "$_dir")
    PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
    make  || return 1
    make install DESTDIR="${pkgdir}" || return 1

  else
  _dir=$(find $srcdir -maxdepth 2 -type f -name 'Build.PL')
  if [ ! -z "$_dir" ]; then
    cd $(dirname "$_dir")
    PERL_MM_USE_DEFAULT=1 perl Build.PL INSTALLDIRS=vendor || return 1
    ./Build  || return 1
    ./Build install destdir=${pkgdir} || return 1

  else
    echo "error: failed to detect build method for $pkgname"
    echo "you may be able to fix this by editing the PKGBUILD"
    return 1
  fi fi

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

